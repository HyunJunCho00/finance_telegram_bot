[Unit]
Description=Crypto Trading System Scheduler
After=network.target

[Service]
Type=simple
User=crypto_trader
WorkingDirectory=/opt/crypto_trading_system
Environment="PYTHONUNBUFFERED=1"
Environment="USE_SECRET_MANAGER=true"
Environment="PROJECT_ID=your-gcp-project-id"
Environment="VERTEX_REGION=us-central1"
Environment="ENABLE_GCS_ARCHIVE=false"
ExecStart=/opt/crypto_trading_system/venv/bin/python scheduler.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
