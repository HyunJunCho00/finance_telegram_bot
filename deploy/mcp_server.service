[Unit]
Description=Crypto Trading MCP Server (SSE)
After=network.target

[Service]
Type=simple
User=crypto_trader
WorkingDirectory=/opt/app
Environment="PYTHONUNBUFFERED=1"
Environment="USE_SECRET_MANAGER=true"
Environment="PROJECT_ID=your-gcp-project-id"
Environment="VERTEX_REGION=us-central1"
ExecStart=/opt/app/venv/bin/python -m mcp_server.server
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
